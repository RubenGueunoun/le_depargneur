<div class="webview-banner-show-cb center-flex-box">
  <div class="sign-up-banner">
    <h3>Bienvenue au DÃ©pargneur !</h3>
    <h2>Connexion</h2>
  </div>
</div>

<div class="logo-sign-up">
  <%= image_tag "logo.png" %>
</div>

<div class="box-signup">
  <div class="conteneur-signup">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="position-boutton-valider">
          <%= f.button :submit, "Connexion", class:"boutton-valider" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
